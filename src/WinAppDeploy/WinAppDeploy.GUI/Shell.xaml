<controls:MetroWindow x:Class="WinAppDeploy.GUI.Shell"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:modules="clr-namespace:WinAppDeploy.GUI.Modules"
                      mc:Ignorable="d"
                      xmlns:prism="http://prismlibrary.com/"
                      xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
                      GlowBrush="Black"
                      ResizeMode="CanResizeWithGrip"
                      WindowStartupLocation="CenterScreen"
                      SaveWindowPosition="True"
                      Title="WinAppDeploy">

    <controls:MetroWindow.RightWindowCommands>
        <controls:WindowCommands>
            <Button Content="settings" Command="{Binding SettingsCommand}" />
        </controls:WindowCommands>
    </controls:MetroWindow.RightWindowCommands>


    <DockPanel LastChildFill="True">
        <ContentControl DockPanel.Dock="Left"
                        prism:RegionManager.RegionName="{x:Static modules:RegionNames.ToolbarRegion}" />
        <ContentControl prism:RegionManager.RegionName="{x:Static modules:RegionNames.ContentRegion}" />
    </DockPanel>
</controls:MetroWindow>